<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">
    <data>
        <variable
            name="handler"
            type="de.fenomedia.colorconverter.MainBindingHandlers"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/panelColor"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <!-- CMYK -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_cyan"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    android:text="@string/cyan"
                    />
                <EditText
                    android:id="@+id/txt_cyan"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:maxLength="5"
                    android:text="@{String.valueOf(handler.cyan)}"
                    android:ems="3"
                    android:layout_gravity="center_horizontal"
                    />
                <SeekBar
                    android:id="@+id/seek_cyan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:progress="@{Math.round(handler.cyan * 100)}"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="100"
                    android:tag="cyanSeek"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_magenta"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    android:text="@string/magenta"
                    />
                <EditText
                    android:id="@+id/txt_magenta"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.valueOf(handler.magenta)}"
                    android:layout_column="1"
                    android:maxLength="5"
                    android:ems="3"
                    android:layout_gravity="center_horizontal"
                    />
                <SeekBar
                    android:id="@+id/seek_magenta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:progress="@{Math.round(handler.magenta * 100)}"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="100"
                    android:tag="magentaSeek"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_yellow"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    android:text="@string/yellow"
                    />
                <EditText
                    android:id="@+id/txt_yellow"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:text="@{String.valueOf(handler.yellow)}"
                    android:layout_height="wrap_content"
                    android:maxLength="5"
                    android:layout_column="1"
                    android:ems="3"
                    android:layout_gravity="center_horizontal"
                    />
                <SeekBar
                    android:id="@+id/seek_yellow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:progress="@{Math.round(handler.yellow * 100)}"
                    android:layout_column="2"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="100"
                    android:tag="keyYellow"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/lbl_key"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:ems="4"
                    android:layout_gravity="center_vertical"
                    android:text="@string/key"
                    />
                <EditText
                    android:id="@+id/txt_key"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="@{String.valueOf(handler.key)}"
                    android:ems="3"
                    android:layout_gravity="center_horizontal"
                    />
                <SeekBar
                    android:id="@+id/seek_key"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:progress="@{Math.round(handler.key * 100)}"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="100"
                    android:tag="keySeek"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:padding="2dp"
                    android:background="#dedede"
                    android:layout_gravity="center_horizontal"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:layout_span="4">
                </View>

            </TableRow>
            <!-- RGB -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/red"
                    android:id="@+id/lbl_red"
                    android:ems="4"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:id="@+id/txt_red"
                    android:inputType="numberDecimal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:maxLength="3"
                    android:ems="3"
                    android:text="@{String.valueOf(handler.red)}"
                    android:layout_column="1" />

                <SeekBar
                    android:id="@+id/seek_red"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="255"
                    android:tag="redSeek"
                    android:progress="@{handler.red}"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/green"
                    android:id="@+id/lbl_greem"
                    android:ems="4"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:inputType="number"
                    android:id="@+id/txt_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:maxLength="3"
                    android:text="@{String.valueOf(handler.green)}" />

                <SeekBar
                    android:id="@+id/seek_green"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:max="255"
                    android:tag="greenSeek"
                    android:progress="@{handler.green}"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="10dp"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="0"
                    android:text="@string/blue"
                    android:id="@+id/lbl_blue"
                    android:ems="4"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:id="@+id/txt_blue"
                    android:inputType="number"
                    android:maxLength="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:text="@{String.valueOf(handler.blue)}"
                    android:layout_gravity="center_vertical" />

                <SeekBar
                    android:id="@+id/seek_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="2"
                    android:setOnSeekBarChangeListener="@{handler.seekBarChangeListener}"
                    android:max="255"
                    android:tag="blueSeek"
                    android:progress="@{handler.blue}"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="0dp">
                <View
                    android:layout_height="1dp"
                    android:layout_width="match_parent"
                    android:background="#DEDEDE"
                    android:layout_weight="1"/>

            </TableRow>

        </TableLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:padding="5dp">

                <TextView

                    android:text="@{handler.hexstr}"
                    android:ems="3"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:id="@+id/txtHexColor"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:layout_weight=".1"
                    android:gravity="center" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_column="1"
                    android:layout_weight=".9"
                    android:layout_span="2"
                    android:id="@+id/imageView"
                    android:layout_gravity="top|left|right|bottom"
                    android:background="@drawable/image_border"
                    android:src="@{handler.rgbcolor}"/>

        </LinearLayout>
    </LinearLayout>

</layout>